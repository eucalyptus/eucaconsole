<metal:block use-macro="main_template">

<head metal:fill-slot="head_css">
    <link rel="stylesheet" type="text/css" href="${request.static_url('koala:static/css/pages/scalinggroups.css')}" />
</head>

<div metal:fill-slot="main_content">
    <div class="row" id="contentwrap" ng-app="LandingPage">
        <h3 class="header" id="pagetitle" i18n:translate="">
            Scaling Groups
        </h3>
        <div class="large-2 columns" id="landing-page-filters">
            <div metal:use-macro="layout.global_macros['properties_filter_form']"></div>
        </div>
        <div metal:use-macro="layout.global_macros['landing_page_datagrid']">
            <div metal:fill-slot="new_button">
                <a class="button" i18n:translate="">Create new scaling group</a>
            </div>
            <div metal:fill-slot="tile_content" tal:omit-tag="">
                <div ng-show="item.launch_config">
                    <span class="label" title="Launch Config" i18n:attributes="title" data-tooltip="">LC</span>
                    {{ item.launch_config }}
                </div>
                <div ng-show="item.instance_ids.length > 0">
                    <span class="label" title="Instances" i18n:attributes="title" data-tooltip="">IN</span>
                    <span ng-repeat="instance_id in item.instance_ids">
                        <a ng-href="/instances/{{ instance_id }}">{{ instance_id }}</a><span ng-show="!$last">,&nbsp;</span>
                    </span>
                </div>
                <div ng-show="item.availability_zones">
                    <span class="label" title="Availability Zones" i18n:attributes="title" data-tooltip="">AZ</span>
                    {{ item.availability_zones }}
                </div>
                <div ng-show="item.desired_capacity">
                    <span class="label" title="Desired Capacity" i18n:attributes="title" data-tooltip="">DC</span>
                    {{ item.desired_capacity }}
                </div>
                <div ng-show="item.max_size">
                    <span class="label" title="Max Size" i18n:attributes="title" data-tooltip="">MX</span>
                    {{ item.max_size }}
                </div>
                <div ng-show="item.min_size">
                    <span class="label" title="Min Size" i18n:attributes="title" data-tooltip="">MN</span>
                    {{ item.min_size }}
                </div>
                <div ng-show="item.placement_group">
                    <span class="label" title="Placement Group" i18n:attributes="title" data-tooltip="">PC</span>
                    {{ item.placement_group }}
                </div>
                <div ng-show="item.termination_policies">
                    <span class="label" title="Termination Policies" i18n:attributes="title" data-tooltip="">TP</span>
                    {{ item.termination_policies }}
                </div>
            </div>
            <metal:block metal:fill-slot="tableview_headers">
                <th i18n:translate="">Name</th>
                <th i18n:translate="">Launch Config</th>
                <th i18n:translate="">Instances</th>
                <th i18n:translate="">Availability Zones</th>
                <th i18n:translate="">Desired Capacity</th>
                <th i18n:translate="">Max</th>
                <th i18n:translate="">Min</th>
            </metal:block>
            <metal:block metal:fill-slot="tableview_columns">
                <td><a ng-href="${prefix}/{{ item.id || item.name | escapeURL }}">{{ item.name }}</a></td>
                <td>{{ item.launch_config }}</td>
                <td>
                    <span ng-repeat="instance_id in item.instance_ids">
                        <a ng-href="/instances/{{ instance_id }}">{{ instance_id }}</a><span ng-show="!$last">, </span>
                    </span>
                </td>
                <td>{{ item.availability_zones }}</td>
                <td>{{ item.desired_capacity }}</td>
                <td>{{ item.max_size }}</td>
                <td>{{ item.min_size }}</td>
            </metal:block>
        </div>
    </div>
</div>

<div metal:fill-slot="tail_js">
    <script src="${request.static_url('koala:static/js/thirdparty/utils/purl.js')}"></script>
    <script src="${request.static_url('koala:static/js/pages/custom_filters.js')}"></script>
    <script src="${request.static_url('koala:static/js/pages/landingpage.js')}"></script>
</div>

</metal:block>

