<metal:block use-macro="main_template">

<head metal:fill-slot="head_css">
    <link rel="stylesheet" type="text/css" href="${request.static_url('koala:static/css/pages/scalinggroup.css')}" />
</head>

<div metal:fill-slot="main_content">
    <div class="row" id="contentwrap">
        <h3 class="header" id="pagetitle">
            <a class="back-arrow" href="${request.route_url('scalinggroups')}"
               data-tooltip="" title="Back to scaling groups" i18n:attributes="title">&lt;</a>
            <span i18n:translate="">Scaling Group</span> ${scaling_group.name if scaling_group else ''}
        </h3>
        <dl class="sub-nav" id="scalinggroup-subnav">
            <dd><a href="${request.route_url('scalinggroup_view', id=scaling_group.name)}" i18n:translate="">Scaling Group</a></dd>
            <dd class="active"><a href="#">Instances</a></dd>
            <dd><a href="${request.route_url('scalinggroup_alarms', id=scaling_group.name)}" i18n:translate="">Alarms</a></dd>
            <dd><a href="${request.route_url('scalinggroup_policies', id=scaling_group.name)}" i18n:translate="">Policies</a></dd>
        </dl>
        <!-- Notifications -->
        <metal:block metal:use-macro="layout.global_macros['notifications']" />

        <div class="large-8 columns">
            <div class="panel gridwrapper has-title">
                <h6 class="title">
                    <span i18n:translate="">Instances in scaling group</span>
                    <strong>${scaling_group.name}</strong>
                </h6>
                <div class="tile add" id="add-instances">
                    <a href="#" data-reveal-id="add-instances-modal">
                        <div class="plus">+</div>
                        <div i18n:translate="">Add more instances</div>
                    </a>
                </div>
                <div class="tile item" tal:repeat="instance instances">
                    <div class="header">
                        <strong><a href="${request.route_url('instance_view', id=instance.instance_id)}">${instance.instance_id}</a></strong>
                        <a class="tiny secondary button dropdown right"
                           data-reveal-id="delete-policy-modal"><i class="icon fi-minus-circle"></i></a>
                    </div>
                    <div class="content">
                        <div>
                            <span class="label" title="Availability zone" i18n:attributes="title" data-tooltip="">AZ</span>
                            ${instance.availability_zone}
                        </div>
                        <div>
                            <span class="label" title="Launch configuration" i18n:attributes="title" data-tooltip="">LC</span>
                            ${instance.launch_config_name}
                        </div>
                        <div>
                            <span class="label" title="State" i18n:attributes="title" data-tooltip="">ST</span>
                            ${instance.lifecycle_state}
                        </div>
                        <div>
                            <span class="label" title="Health status" i18n:attributes="title" data-tooltip="">HS</span>
                            ${instance.health_status}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

</metal:block>

