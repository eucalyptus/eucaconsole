<metal:block use-macro="main_template">

<head metal:fill-slot="head_css">
    <link rel="stylesheet" type="text/css" href="${request.static_url('koala:static/css/pages/scalinggroup.css')}" />
</head>

<div metal:fill-slot="main_content">
    <div class="row" id="contentwrap" ng-app="ScalingGroupAlarms" ng-controller="ScalingGroupAlarmsCtrl">
        <h3 class="header" id="pagetitle">
            <a class="back-arrow" href="${request.route_url('scalinggroups')}"
               data-tooltip="" title="Back to scaling groups" i18n:attributes="title">&lt;</a>
            <span i18n:translate="">Scaling Group</span> ${scaling_group.name if scaling_group else ''}
        </h3>
        <dl class="sub-nav" id="scalinggroup-subnav">
            <dd><a href="${request.route_url('scalinggroup_view', id=scaling_group.name)}" i18n:translate="">Scaling Group</a></dd>
            <dd><a href="${request.route_url('scalinggroup_instances', id=scaling_group.name)}">Instances</a></dd>
            <dd class="active"><a href="#" i18n:translate="">Alarms</a></dd>
            <dd><a href="${request.route_url('scalinggroup_policies', id=scaling_group.name)}" i18n:translate="">Policies</a></dd>
        </dl>
        <!-- Notifications -->
        <metal:block metal:use-macro="layout.global_macros['notifications']" />

        <div class="large-8 columns">
            <div class="panel gridwrapper has-title">
                <h6 class="title">
                    <span i18n:translate="">Alarms available for scaling group</span>
                    <strong>${scaling_group.name}</strong>
                </h6>
                <div class="tile add" id="add-alarm">
                    <a href="#" data-reveal-id="create-alarm-modal">
                        <div class="plus">+</div>
                        <div i18n:translate="">Add alarm</div>
                    </a>
                </div>
                <div class="tile item" tal:repeat="alarm alarms">
                    <div class="header">
                        <strong><a href="#">${alarm.name}</a></strong>
                        <a class="tiny secondary button dropdown right"
                           ng-click="revealDeleteModal('${alarm.name}')"><i class="icon fi-minus-circle"></i></a>
                    </div>
                    <div class="content">
                        <div>
                            <span class="label" title="Metric" i18n:attributes="title" data-tooltip="">ME</span>
                            ${alarm.metric}
                        </div>
                        <div>
                            <span class="label" title="Period" i18n:attributes="title" data-tooltip="">PE</span>
                            ${alarm.period} seconds
                        </div>
                        <div>
                            <span class="label" title="Statistic" i18n:attributes="title" data-tooltip="">ST</span>
                            ${alarm.statistic}
                        </div>
                        <div>
                            <span class="label" title="Threshold" i18n:attributes="title" data-tooltip="">TH</span>
                            ${alarm.comparison} ${alarm.threshold} ${'Instances' if alarm.unit == 'None' else alarm.unit}
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--! Modal dialogs -->
        <div id="create-alarm-modal" class="reveal-modal small" data-reveal="">
            <h3 i18n:translate="">Create alarm</h3>
            <p i18n:translate="">&nbsp;</p>
            <form action="${request.route_url('scalinggroup_alarm_create', id=scaling_group.name)}" method="post" data-abide="">
                ${structure:create_form['csrf_token']}
                <hr />
                <div class="small-4 columns">&nbsp;</div>
                <div class="small-8 columns">
                    <button type="submit" class="button" i18n:translate="">Add alarm</button>
                </div>
            </form>
            <a class="close-reveal-modal">&#215;</a>
        </div>
        <div id="delete-alarm-modal" class="reveal-modal small" data-reveal="">
            <h3 i18n:translate="">Delete alarm</h3>
            <p><span i18n:translate="">Are you sure you want to delete the alarm</span>
               <b>{{ alarmName }}</b>?</p>
            <form action="${request.route_url('scalinggroup_alarm_delete', id=scaling_group.name)}" method="post">
                ${structure:delete_form['csrf_token']}
                <input type="hidden" name="name" value="{{ alarmName }}">
                <button type="submit" class="button" i18n:translate="">Yes, delete alarm</button>
            </form>
            <a class="close-reveal-modal">&#215;</a>
        </div>
        <!--! /end modal dialogs -->
    </div>
</div>

<div metal:fill-slot="tail_js">
    <script src="${request.static_url('koala:static/js/pages/scalinggroup_alarms.js')}"></script>
</div>

</metal:block>

