
<!--! Tag editor -->
<div id="tag-editor" class="row inline" ng-app="TagEditor"
     ng-controller="TagEditorCtrl" ng-init="initTags('${tags_json}')">
    <div class="small-3 columns">
        <label class="right" i18n:translate="">Tags</label>
    </div>
    <div class="small-9 columns field">
        <div class="row tagentry existing inline controls-wrapper"
             ng-repeat="tag in tagsArray" ng-cloak="cloak">
            <div class="small-1 columns">
                <a href="#"  class="circle has-tip" ng-click="removeTag($index, $event)"
                        title="Remove tag"><i class="fi-minus-circle"></i></a>
            </div>
            <div class="small-11 columns">
                <strong i18n:translate="">Tag</strong>:
                <span class="{{tag.fresh}}">{{ tag.name }} <em>=</em> {{ tag.value }}</span>
            </div>
        </div>
        <div class="row">
            <div class="small-1 columns">&nbsp;</div>
            <div class="small-11 columns subheader"><span i18n:translate="">Add another tag</span>:</div>
        </div>
        <div class="row tagentry inline controls-wrapper">
            <div>
                <div class="small-1 columns">&nbsp;</div>
                <div class="small-5 columns">
                    <input class="taginput key" placeholder="name..." ng-model="newTagKey" pattern="tag_pattern" />
                    <small class="error" i18n:translate="">Tag may not begin with "aws:"</small>
                </div>
                <div class="small-6 columns">
                    <input class="taginput value" placeholder="value..." pattern="tag_pattern" />
                    <small class="error" i18n:translate="">Tag may not begin with "aws:"</small>
                </div>
            </div>
            <div>&nbsp;</div>
            <div>
                <div class="small-1 columns">&nbsp;</div>
                <div class="small-11 columns">
                    <a href="#" ng-click="addTag($event)" class="button round secondary small" id="add-tag-btn"
                       title="Add tag">Add tag</a>
                </div>
            </div>
        </div>
        <!--! Add class="debug" to textarea to view tags data posted by form -->
        <textarea id="tags" name="tags" class="hidden"></textarea>
    </div>
    <script src="${request.static_url('koala:static/js/pages/tageditor.js')}"></script>
</div>
