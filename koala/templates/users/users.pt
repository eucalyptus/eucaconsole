<metal:block use-macro="main_template">

<head metal:fill-slot="head_css">
    <link rel="stylesheet" type="text/css" href="${request.static_url('koala:static/css/pages/users.css')}" />
</head>

<div metal:fill-slot="main_content" ng-app="UsersPage" ng-controller="UsersCtrl" ng-init="initPage(
                '${request.route_url('user_view', name='_name_')}',
                '${request.route_url('group_view', name='_name_')}',
                '${request.route_url('user_summary_json', name='_name_')}')">
    <div class="row" id="contentwrap" ng-controller="ItemsCtrl"
         ng-init="initController('users', '${initial_sort_key}', '${json_items_endpoint}')">
        <metal:breadcrumbs metal:use-macro="layout.global_macros['breadcrumbs']">
            <metal:crumbs metal:fill-slot="crumbs">
                <li class="current"><a href="#" i18n:translate="">IAM Users</a></li>
            </metal:crumbs>
        </metal:breadcrumbs>
        <!-- Notifications -->
        <metal:block metal:use-macro="layout.global_macros['notifications']" />

        <div class="large-2 columns" id="landing-page-filters">
            <!--! Filters go here -->
        </div>
        <div metal:use-macro="layout.global_macros['landing_page_datagrid']">
            <div metal:fill-slot="new_button">
                <a class="button" i18n:translate="" id="add-user-btn"
                   href="${request.route_url('user_view', name='new')}">Create user</a>
            </div>
            <div metal:fill-slot="tile_dropdown_button" tal:omit-tag="">
                <a class="tiny secondary button dropdown right"><i class="fi-widget"></i></a>
                <ul id="item-dropdown_{{ item.id }}" class="f-dropdown">
                    <li><a i18n:translate="" ng-href="${prefix}/{{ item.user_name }}">Edit properties</a></li>
                    <li><a i18n:translate="" ng-click="revealModal('delete', item)">Delete</a></li>
                </ul>
            </div>
            <div metal:fill-slot="tile_header">
                <a ng-href="${prefix}/{{item.user_name }}">{{ item.user_name }}</a>
            </div>
            <div metal:fill-slot="tile_content" tal:omit-tag="">
                <div ng-show="item.num_groups > 0">
                    <span class="label" title="Groups" i18n:attributes="title" data-tooltip="">GR</span>
                    <a ng-click="linkUser(item, '#group-section')">{{ item.num_groups }}</a>
                </div>
                <div ng-show="item.has_password">
                    <span class="label" title="Password Set" i18n:attributes="title" data-tooltip="">PW</span>
                    <a ng-click="linkUser(item, '#password-section')"><i class="fi-check"></i></a>
                </div>
                <div ng-show="item.num_keys > 0">
                    <span class="label" title="Access Keys" i18n:attributes="title" data-tooltip="">AK</span>
                    <a ng-click="linkUser(item, '#access-keys-section')">{{ item.num_keys }}</a>
                </div>
            </div>
            <div metal:fill-slot="tile_footer">
                <div ng-show="!item.has_password"><a class="link" ng-click="linkUser(item, '#password-section')" i18n:translate="">Does not have password</a></div>
                <div ng-show="item.num_keys == 0"><a class="link" ng-click="linkUser(item, '#access-keys-section')" i18n:translate="">Does not have access keys</a></div>
            </div>
            <metal:block metal:fill-slot="tableview_headers">
                <th i18n:translate="">User name</th>
                <th i18n:translate="">Groups</th>
                <th i18n:translate="">Password</th>
                <th i18n:translate="">Access Keys</th>
                <th class="actions" i18n:translate="">Actions</th>
            </metal:block>
            <metal:block metal:fill-slot="tableview_columns">
                <td class="id"><a ng-href="${prefix}/{{ item.user_name }}">{{ item.user_name }}</a></td>
                <td>
                    <a ng-click="linkUser(item, '#group-section')">{{ item.num_groups }}</a>
                </td>
                <td>
                    <span ng-show="item.has_password">
                        <a ng-click="linkUser(item, '#password-section')"><i class="fi-check"></i></a>
                    </span>
                </td>
                <td>
                    <span ng-show="item.num_keys">
                        <a ng-click="linkUser(item, '#access-keys-section')">{{ item.num_keys }} <span i18n:translate="">active</span></a>
                    </span>
                </td>
                <td>
                  <span class="actions">
                    <a class="tiny secondary button dropdown round"><i class="fi-widget"></i></a>
                    <ul id="item-dropdown_{{ item.id }}" class="f-dropdown">
                        <li><a i18n:translate="" ng-href="${prefix}/{{ item.user_name }}">Edit properties</a></li>
                        <li>
                            <a i18n:translate="" ng-click="revealModal('delete', item)">Delete</a>
                        </li>
                    </ul>
                  </span>
                </td>
            </metal:block>
        </div>
        <div id="help-modal" class="reveal-modal medium" data-reveal="">
            <h3 i18n:translate="">Help</h3>
            <p>
                Need some content
            </p>
            <a class="close-reveal-modal">&#215;</a>
        </div>
        <div id="user-dialogs">
            <div id="delete-user-modal" class="reveal-modal small" data-reveal="">
                <h3 i18n:translate="">Delete User</h3>
                <p>
                    <span i18n:translate="">Deleting a user also deletes all keys, passwords and permissions associated with that user. Are you sure you want to delete user <strong>{{ user_name }}</strong></span>?
                </p>
                <form method="post" id="delete-form" action="${request.route_url('user_delete', name='_name_')}">
                    ${structure:delete_form['csrf_token']}
                    <div>&nbsp;</div>
                    <div class="row">
                        <div class="small-4 columns">&nbsp;</div>
                        <div class="small-8 columns field inline">
                            <input type="submit" class="button" value="Yes, delete" i18n:attributes="value" />
                        </div>
                    </div>
                </form>
                <a class="close-reveal-modal">&#215;</a>
            </div>
        </div>
    </div>
</div>
<metal:block metal:fill-slot="offcanvas_right">
    <div id="help-content-div" class="help-content">
        ${panel('help_users', 'user_landing_page' )}
    </div>
</metal:block>

<div metal:fill-slot="tail_js">
    <script src="${request.static_url('koala:static/js/pages/custom_filters.js')}"></script>
    <script src="${request.static_url('koala:static/js/pages/landingpage.js')}"></script>
    <script src="${request.static_url('koala:static/js/pages/users.js')}"></script>
</div>

</metal:block>

