<metal:block use-macro="main_template">

<head metal:fill-slot="head_css">
    <link rel="stylesheet" type="text/css" href="${request.static_path('eucaconsole:static/css/pages/roles.css')}" />
</head>

<div metal:fill-slot="main_content" ng-app="RolesPage" ng-controller="RolesCtrl" ng-init="initPage('${request.route_path('role_view', name='_name_')}')">
    <div class="row" id="contentwrap" ng-controller="ItemsCtrl"
         ng-init="initController('roles', '${initial_sort_key}', '${json_items_endpoint}')">
        <metal:breadcrumbs metal:use-macro="layout.global_macros['breadcrumbs']">
            <metal:crumbs metal:fill-slot="crumbs">
                <li class="current"><a href="#" i18n:translate="">Roles</a></li>
            </metal:crumbs>
        </metal:breadcrumbs>
        <!-- Notifications -->
        <metal:block metal:use-macro="layout.global_macros['notifications']" />
        <h3 id="pagetitle"><strong i18n:translate="">Roles</strong></h3>
        <div metal:use-macro="layout.global_macros['landing_page_datagrid']">
            <div metal:fill-slot="new_button">
                <a class="button" i18n:translate="" id="add-role-btn"
                   href="${request.route_path('role_view', name='new')}">Create Role</a>
            </div>
            <div metal:fill-slot="tile_dropdown_button" tal:omit-tag="">
                <a class="tiny secondary button dropdown right" data-dropdown="item-dropdown_{{ item.role_name | escapeHTMLTagID }}"><i class="fi-widget"></i></a>
                <ul id="item-dropdown_{{ item.role_name | escapeHTMLTagID }}" class="f-dropdown" data-dropdown-content="">
                    <li><a i18n:translate="" ng-href="${prefix}/{{ item.role_name }}">View details</a></li>
                    <li><a i18n:translate="" ng-click="revealModal('delete', item)">Delete</a></li>
                </ul>
            </div>
            <div metal:fill-slot="tile_header">
                <a ng-href="${prefix}/{{item.role_name }}">{{ item.role_name }}</a>
            </div>
            <div metal:fill-slot="tile_content" tal:omit-tag="">
                <div ng-show='item.policy_count > 0'>
                    <span class="label" title="Permissions" i18n:attributes="title" data-tooltip="">PE</span>
                    <a ng-click="linkRole(item, '#policy-list')">{{ item.policy_count }}</a>
                </div>
                <div ng-show='item.instance_count > 0'>
                    <span class="label" title="Permissions" i18n:attributes="title" data-tooltip="">IN</span>
                    <a ng-click="linkRole(item, '#')">{{ item.instance_count }}</a>
                </div>
                <div>
                    <span class="label" title="Creation time" i18n:attributes="title" data-tooltip="">CT</span>
                    {{ item.create_date | date:'${layout.angular_date_format}' }}
                </div>
            </div>
            <div metal:fill-slot="tile_footer">
                <div ng-show="item.policy_count == 0"><a class="link" ng-click="linkRole(item, '#policy-list')" i18n:translate="">Does not have permissions</a></div>
            </div>
            <metal:block metal:fill-slot="tableview_headers">
                <th i18n:translate="">Name</th>
                <th i18n:translate="">Permissions</th>
                <th i18n:translate="">Instances</th>
                <th i18n:translate="">Creation Time</th>
                <th class="actions" i18n:translate="">Actions</th>
            </metal:block>
            <metal:block metal:fill-slot="tableview_columns">
                <td class="id breakword"><a ng-href="${prefix}/{{ item.role_name }}">{{ item.role_name | ellipsis: 30 }}</a></td>
                <td><a ng-click="linkRole(item, '#policy-list')">{{ item.policy_count }}</a></td>
                <td><a ng-click="linkRole(item, '#')">{{ item.instance_count }}</a></td>
                <td> {{ item.create_date | date:'${layout.angular_date_format}' }} </td>
                <td>
                  <span class="actions">
                    <a class="tiny secondary button dropdown round" data-dropdown="item-dropdown_{{ item.role_name | escapeHTMLTagID }}"><i class="fi-widget"></i></a>
                    <ul id="item-dropdown_{{ item.role_name | escapeHTMLTagID }}" class="f-dropdown" data-dropdown-content="">
                        <li><a i18n:translate="" ng-href="${prefix}/{{ item.role_name }}">View details</a></li>
                        <li>
                            <a i18n:translate="" ng-click="revealModal('delete', item)">Delete</a>
                        </li>
                    </ul>
                  </span>
                </td>
            </metal:block>
        </div>
        <!--! Modal dialogs reused across landing and detail page -->
        ${panel('role_dialogs', delete_form=delete_form, landingpage=True)}
    </div>
</div>

<metal:block metal:fill-slot="offcanvas_right">
    <div id="help-content-div" class="help-content">
        ${panel('help_roles', 'role_landing_page' )}
    </div>
</metal:block>

<div metal:fill-slot="tail_js">
    <script src="${request.static_path('eucaconsole:static/js/pages/custom_filters.js')}"></script>
    <script src="${request.static_path('eucaconsole:static/js/pages/landingpage.js')}"></script>
    <script src="${request.static_path('eucaconsole:static/js/pages/roles.js')}"></script>
</div>

</metal:block>

