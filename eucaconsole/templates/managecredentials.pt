<metal:block use-macro="main_template" i18n:domain="eucaconsole">

<div metal:fill-slot="head_css">
    <link rel="stylesheet" href="${request.static_path('eucaconsole:static/css/pages/login.css')}" />
    <link rel="stylesheet" href="${request.static_path('eucaconsole:static/css/pages/managecredentials.css')}" />
</div>

<div metal:fill-slot="main_content">
    <div class="row" id="managecredentials-wrapper" ng-app="ManageCredentialsView" ng-controller="ManageCredentialsViewCtrl" ng-init="initController()">
        <metal:breadcrumbs metal:use-macro="layout.global_macros['breadcrumbs']">
            <metal:crumbs metal:fill-slot="crumbs">
                <li><span i18n:translate="">Manage credentials</span></li>
            </metal:crumbs>
        </metal:breadcrumbs>
        <metal:block metal:use-macro="layout.global_macros['notifications']" />
        <h3 id="pagetitle">
            <strong i18n:translate="">Manage credentials for user:</strong>&nbsp;
        </h3>
        <div class="large-8 columns panel">
            <div id="changepassword-panel">
                <div tal:condition="password_expired" tal:omit-tag="">
                    <h3 class="header" i18n:translate="">Password expired</h3>
                </div>
                <div tal:condition="not password_expired" tal:omit-tag="">
                    <h3 class="header" i18n:translate="">Change password</h3>
                </div>
                <div tal:condition="password_expired">
                    <p i18n:translate="">Your password has expired. Please update your password.</p>
                </div>
                <div class="row">
                    <div tal:condition="changepassword_form_errors">
                    <div data-alert="alert" class="alert-box alert large-10 large-centered columns"
                            tal:repeat="changepassword_error changepassword_form_errors">
                        ${ changepassword_error }
                        <a href="#" class="close">&times;</a>
                    </div>
                    </div>
                    <div class="large-8 small-12 columns">
                        <form class="custom" id="euca-changepassword-form" method="post" action="${request.route_path('changepassword')}">
                            ${structure:changepassword_form['csrf_token']}
                            <input type="hidden" name="came_from" value="${came_from}" />
                            <input type="hidden" name="account" value="${account}" />
                            <input type="hidden" name="username" value="${username}" />
                            <div class="row controls-wrapper controls_${field.name}" tal:repeat="field changepassword_form">
                                <div class="small-12 columns field">
                                    <div for="top-label" class="add-label">${field.label.text}<span class="req">*</span></div>
                                    <div ng-non-bindable=""><!--! Note: Don't remove non-bindable attr here -->
                                        ${structure:field}
                                    </div>
                                    <div tal:condition="field.errors" class="server-validation">
                                        <span class="error" tal:repeat="error field.errors" ng-non-bindable="">
                                            ${error}
                                        </span>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                              <div class="small-12 columns">
                                <small id="password-different" class="error" style="display:none;" i18n:translate="">New password must be different than old one</small>
                              </div>
                            </div>
                            <div class="row">
                              <div class="small-12 columns">
                                <small id="passwords-match" class="error" style="display:none;" i18n:translate="">Passwords must match</small>
                              </div>
                            </div>
                            <p/>
                            <div class="row">
                                <div class="small-12 columns">
                                    <button type="submit" class="button radius" i18n:translate="">Change password</button>
                                    <a href="javascript:history.back()" class="cancel-link" i18n:translate="">Cancel</a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <hr/>
            <div id="create-keys-panel">
                <h3 class="header" i18n:translate="">Generate access keys</h3>
                <p>
                    <span i18n:translate="">This option generates a new set of access keys for you and makes them active. Please keep the downloaded file in a safe place, as they are not stored for you in the cloud.</span>
                </p>
                <p>
                    <span i18n:translate="">Security note: Please contact your cloud administrator to have them remove any old keys you are no longer using.</span>
                </p>
                <div ng-show="!access_key">
                    <a class="button medium" id="generate-keys-button"
                       ng-click="generateKeys('${request.route_path('user_generate_keys', name=username)}')"
                       i18n:translate="">Create Access Keys</a>
                </div>
                <div ng-show="access_key">
                    <a class="button medium" id="download-keys-button"
                       ng-click="downloadKeys('${request.route_path('file_download')}')"
                       i18n:translate="">Download These Keys</a>
                    <label class="section-label" i18n:translate="">Access keys</label>
                    <label i18n:translate="">Access key</label><span>{{ access_key }}</span>
                    <label i18n:translate="">Secret access key</label><span>{{ secret_key }}</span>
                </div>
            </div>
        </div>
        <div class="large-4 columns">
            <metal:block metal:use-macro="layout.global_macros['help_expando']" />
            <div class="help-content" ng-show="isHelpExpanded" ng-cloak="">
                <!-- HELP CONTENT -->
            </div>
        </div>
    </div>
</div>

<div metal:fill-slot="tail_js">
    <script src="${request.static_path('eucaconsole:static/js/thirdparty/utils/zxcvbn-async.js')}"></script>
    <script src="${request.static_path('eucaconsole:static/js/pages/managecredentials.js')}"></script>
</div>

</metal:block>
