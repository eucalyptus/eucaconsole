<metal:block use-macro="main_template" i18n:domain="eucaconsole">

<head metal:fill-slot="head_css">
    <link rel="stylesheet" type="text/css"
        href="${request.static_path('eucaconsole:static/css/pages/elb_wizard.css')}" />
    <link rel="stylesheet" type="text/css"
        href="${request.static_path('eucaconsole:static/css/widgets/elb_listener_editor.css')}" />
    <link rel="stylesheet" type="text/css"
        href="${request.static_path('eucaconsole:static/css/widgets/elb-listener-editor.css')}" />
    <link rel="stylesheet" type="text/css"
        href="${request.static_path('eucaconsole:static/css/widgets/magic_search.css')}"/>
    <link rel="stylesheet" type="text/css"
        href="${request.static_path('eucaconsole:static/css/widgets/instance_selector.css')}" />
    <link rel="stylesheet" type="text/css"
        href="${request.static_path('eucaconsole:static/css/widgets/tag-editor.css')}" />
</head>

<div metal:fill-slot="main_content">
    <div class="row">

        <metal:breadcrumbs metal:use-macro="layout.global_macros['breadcrumbs']">
            <metal:crumbs metal:fill-slot="crumbs">
                <li><a href="${request.route_path('elbs')}" i18n:translate="">Load balancers</a></li>
                <li class="current"><a href="#" i18n:translate="">Create load balancer</a></li>
            </metal:crumbs>
        </metal:breadcrumbs>
        <!-- Notifications -->
        <metal:block metal:use-macro="layout.global_macros['notifications']" />

        <h3 id="pagetitle">
            <strong i18n:translate="">Create new load balancer</strong>
        </h3>

        <div class="large-8 columns">
            <div class="wizard" ng-app="ELBWizard" ng-controller="MainController as main">
                <wizard-nav vpc-enabled="${ is_vpc_supported }" cloud-type="${ cloud_type }"></wizard-nav>

                <div class="tabs-content">
                    <div class="content active">
                        <div ng-view=""/>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div metal:fill-slot="tail_js">
    <script src="${request.static_path('eucaconsole:static/js/thirdparty/angular/angular-route.min.js')}"></script>
    <script src="${request.static_path('eucaconsole:static/js/pages/elb-wizard/wizard.js')}"></script>
    <script src="${request.static_path('eucaconsole:static/js/widgets/listener-editor/listener-editor.js')}"></script>
    <script src="${request.static_path('eucaconsole:static/js/widgets/listener-editor/security-policy-editor.js')}"></script>
    <script src="${request.static_path('eucaconsole:static/js/widgets/modal.js')}"></script>
    <script src="${request.static_path('eucaconsole:static/js/widgets/tag-editor/tag-editor.js')}"></script>
</div>
</metal:block>
