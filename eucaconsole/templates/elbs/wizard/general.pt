<form ng-submit="general.submit()">
    <h6 i18n:translate="">General</h6>

    <div class="row inline stacked controls-wrapper">
        <div class="columns">
            <label class="left stack-label">Name <span class="req">*</span></label>
            <input type="text" class="text-input"
                   focus-on-load="true" name="name" ng-model="elbName" required="required"/>
        </div>
        <hr/>

        <div>
            <listener-editor ng-model="general.listeners"></listener-editor>
        </div>

        <hr/>

        <div>
            <tag-editor ng-model="general.tags">[]</tag-editor>
        </div>

        <hr/>


        <div>
            <label>
                <span class="req">*</span>
                <span i18n:translate="">Required fields</span>
            </label>
        </div>
        <div class="row">
            <div class="small-3 columns">&nbsp;</div>
            <div class="small-9 columns field inline">
                <button class="button small round">
                    <span i18n:translate="">Next</span>
                </button>
                <a href="${request.route_path('elbs')}"
                   class="cancel-link" i18n:translate="">Cancel</a>
            </div>
        </div>
    </div>
</form>
